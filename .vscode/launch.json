    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: trainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            // "stopOnEntry": true,
        },
        {
            "name": "Python Debugger: player",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/game.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": true,
            "env": {"PYTEST_ADDOPTS": "--no-cov"}
        }
    ]
}